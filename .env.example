# Example environment variables for Mini Task API
# Copy this file to ".env" and fill in your own values.

PORT=3000
NODE_ENV=development

# Database connection string (replace with your actual credentials)
DATABASE_URL="mysql://USER:PASSWORD@HOST:PORT/DATABASE_NAME"

# JWT secrets and token lifetimes
JWT_ACCESS_SECRET=your-access-secret
JWT_REFRESH_SECRET=your-refresh-secret
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Idempotency key expiration in hours
IDEMPOTENCY_TTL_HOURS=24

# Whether to trust proxy headers (true if behind reverse proxy / load balancer)
TRUST_PROXY=false
