datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                 Int       @id @default(autoincrement())
  email              String    @unique
  password           String
  name               String
  role               Role      @default(user)
  isPremium          Boolean   @default(false)
  subscriptionExpiry DateTime?
  createdAt          DateTime  @default(now())

  // relations
  tasksOwned      Task[]           @relation("OwnerTasks")
  tasksAssigned   Task[]           @relation("AssignedTasks")
  refreshTokens   RefreshToken[]   @relation("UserRefreshTokens")
  idempotencyKeys IdempotencyKey[] @relation("UserIdempotencyKeys")
}

model Task {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  status      Status   @default(pending)
  priority    Priority @default(medium)
  isPublic    Boolean  @default(false)
  ownerId     Int
  assignedTo  Int?
  owner       User     @relation("OwnerTasks", fields: [ownerId], references: [id])
  assignee    User?    @relation("AssignedTasks", fields: [assignedTo], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model IdempotencyKey {
  id          Int      @id @default(autoincrement())
  key         String   @unique
  userId      Int
  endpoint    String
  requestHash String
  response    Json
  createdAt   DateTime @default(now())
  expiresAt   DateTime
  user        User     @relation("UserIdempotencyKeys", fields: [userId], references: [id])
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  userId    Int
  tokenId   String   @unique
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())

  // relation to User (ใช้ชื่อเดียวกับฝั่ง User)
  user User @relation("UserRefreshTokens", fields: [userId], references: [id])
}

enum Role {
  user
  premium
  admin
}

enum Status {
  pending
  in_progress
  completed
}

enum Priority {
  low
  medium
  high
}
