datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

model User {
  id                  String   @id @default(cuid())
  email               String   @unique
  password            String
  name                String
  role                Role     @default(user)     // 'user' | 'premium' | 'admin':contentReference[oaicite:7]{index=7}
  isPremium           Boolean  @default(false)
  subscriptionExpiry  DateTime?
  createdAt           DateTime @default(now())
  tasksOwned          Task[]   @relation("OwnerTasks")
  tasksAssigned       Task[]   @relation("AssignedTasks")
  refreshTokens       RefreshToken[]
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      Status   @default(pending)          // 'pending' | 'in_progress' | 'completed':contentReference[oaicite:8]{index=8}
  priority    Priority @default(medium)           // 'low' | 'medium' | 'high':contentReference[oaicite:9]{index=9}
  isPublic    Boolean  @default(false)
  ownerId     String
  assignedTo  String?
  owner       User     @relation("OwnerTasks", fields: [ownerId], references: [id])
  assignee    User?    @relation("AssignedTasks", fields: [assignedTo], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model IdempotencyKey {
  key        String   @id
  userId     String
  endpoint   String
  requestHash String
  response    Json
  createdAt  DateTime @default(now())
  expiresAt  DateTime
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String
  tokenId   String   @unique    // ตรงสเปค refresh payload มี tokenId:contentReference[oaicite:10]{index=10}
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

enum Role {
  user
  premium
  admin
}

enum Status {
  pending
  in_progress
  completed
}

enum Priority {
  low
  medium
  high
}
